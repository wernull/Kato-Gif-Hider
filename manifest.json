{
  "name": "Kato Gif Hider",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Chrome Extension to hide gifs on Kato.im",
  "homepage_url": "https://github.com/wernull/Kato-Gif-Hider",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [
    "https://kato.im/"
  ],
  "content_scripts": [
    {
      "js": [
        "js/jquery/jquery.js",
        "src/inject/kgh.js"
      ],
      "css": [
        "css/kgh.css"
      ],
      "run_at": "document_end",
      "matches": [
        "https://kato.im/*"
      ]
    }
  ],
   "web_accessible_resources": [
    "src/inject/kgh.html"
  ]
}